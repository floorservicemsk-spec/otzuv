# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://i-laminat.ru
NEXT_PUBLIC_BASE_URL=https://i-laminat.ru

# Database Configuration
DATABASE_URL=postgresql://username:password@host:5432/warranty_db
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration (for rate limiting and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_TLS=false

# Analytics
NEXT_PUBLIC_GA4_ID=G-XXXXXXXXXX
NEXT_PUBLIC_YANDEX_METRIKA_ID=12345678

# External Services
SMS_API_KEY=your_sms_api_key_here
SMS_API_URL=https://api.sms.ru/sms/send
EMAIL_API_KEY=your_email_api_key_here
EMAIL_API_URL=https://api.unisender.com/ru/api
EMAIL_FROM=noreply@i-laminat.ru

# CRM Integration
CRM_API_KEY=your_crm_api_key_here
CRM_API_URL=https://api.crm.example.com/v1
CRM_WEBHOOK_SECRET=your_webhook_secret

# Security
NEXT_PUBLIC_CAPTCHA_SITE_KEY=your_turnstile_site_key
CAPTCHA_SECRET_KEY=your_turnstile_secret_key
SESSION_SECRET=your_session_secret_here
API_RATE_LIMIT_WINDOW=3600
API_RATE_LIMIT_MAX=5

# External Links
NEXT_PUBLIC_YANDEX_REVIEWS_URL=https://yandex.ru/maps/org/i_laminat/1234567890/reviews
NEXT_PUBLIC_SUPPORT_PHONE=+78001234567
NEXT_PUBLIC_SUPPORT_EMAIL=support@i-laminat.ru

# Feature Flags
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_CRM_SYNC=true
ENABLE_CAPTCHA=true
ENABLE_ANALYTICS=true

# Logging
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Discount Settings
DISCOUNT_RESERVATION_DAYS=14
WARRANTY_VALIDITY_YEARS=2
